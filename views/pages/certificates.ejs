<head>
  <link rel="stylesheet" href="css/style.css">
  <!-- AOS Animation CSS -->
  <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">
  <style>
    .achievements-section {
      padding: 60px 20px;
      background: #fdfdfd;
      font-family: 'Segoe UI', sans-serif;
    }

    .achievements-section h2 {
      text-align: center;
      font-size: 36px;
      margin-bottom: 40px;
      color: #333;
    }

    .achievements-list {
      display: flex;
      flex-wrap: wrap;
      gap: 25px;
      justify-content: center;
    }

    .achievement-card {
      background: #fff;
      border-radius: 16px;
      padding: 25px;
      max-width: 300px;
      box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .achievement-card:hover {
      transform: translateY(-10px);
      box-shadow: 0 12px 25px rgba(255, 105, 180, 0.25);
    }

    .achievement-card h4 {
      margin-bottom: 10px;
      font-size: 20px;
      color: #222;
    }

    .achievement-card p {
      font-size: 16px;
      color: #555;
      margin-bottom: 15px;
    }

    .achievement-card a {
      display: inline-block;
      margin-bottom: 8px;
      color: #e91e63;
      font-weight: 500;
      text-decoration: none;
      transition: color 0.2s ease;
    }

    .achievement-card a:hover {
      color: #ad1457;
      text-decoration: underline;
    }
  </style>
</head>

<%- include('../partials/header') %>

<section id="achievements" class="achievements-section">
  <div class="container">
    <h2 data-aos="fade-down" data-aos-duration="1000">ðŸ“œ Certificates</h2>

    <div class="achievements-list">
      <div class="achievement-card" data-aos="fade-up" data-aos-delay="0">
        <h4>Certification on JAVA</h4>
        <p>Java certification with great experience.</p>
        <a href="/javacerti.png" target="_blank">View certificate</a>
      </div>

      <div class="achievement-card" data-aos="fade-up" data-aos-delay="100">
        <h4>Certification on Python</h4>
        <p>Python certification with great experience.</p>
        <a href="/python.png" target="_blank">View certificate</a>
      </div>

      <div class="achievement-card" data-aos="fade-up" data-aos-delay="200">
        <h4>Hackathon Participation</h4>
        <p>Led a 4-member team to the finals with a working prototype solving a real-world problem on an Online Interview System.</p>
        <a href="/Hackthon.png" target="_blank">View certificate</a>
      </div>
    </div>
  </div>
</section>

<%- include('../partials/footer') %>

